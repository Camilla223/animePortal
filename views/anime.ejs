<!DOCTYPE html>
<html>

<head>
  <%- include('header') %>

</head>

<body>

  <div class="container-md-fluid container-lg">
    <%- include('backhomebar') %>
    <article class="mb-5 greybkgd p-3 rounded-2">
      <h1 class="title text-uppercase text-md-center text-lg-start"><%- anime.title_english || anime.title %></h1>
      <div class="row row-cols-1 row-cols-lg-3">
        <div class="col-4 offset-4 col-lg-4 offset-lg-0">
          <img class="img-fluid" src="<%- anime.images.jpg.large_image_url%>" />
        </div>
        <div class="col-8 col-lg-5 mt-3 mt-lg-0">
          <p class="px-0 px-lg-2 text-start"><%- anime.synopsis %></p>
        </div>
        <div class="col-4 col-lg-3 mt-3 mt-lg-0">
          <ul class="mb-lg-5">
            <% anime.genres.forEach((genre, index) => { %>
            <li><span class="badge bg-light text-dark"><%- genre.name %></span></li>
            <% }); %>
          </ul>

          <ul class="mt-lg-3">
            <% anime.themes.forEach((theme, index) => { %>
            <li><span class="badge bg-dark"><%- theme.name %></span></li>
            <% }); %>
          </ul>

          <ul class="mt-lg-3">
            <li><b>Animation Studio(s):</b><% anime.studios.forEach((studio) => {  %> <%- studio.name %> <% }); %></li>
          </ul>


        </div>
      </div>
    </article>

    <%- include('genres&footer') %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>