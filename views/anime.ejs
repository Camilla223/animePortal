<!DOCTYPE html>
<html>

<head>
  <%- include('header') %>

</head>

<body>

  <div class="container-md-fluid container-lg">
    <%- include('backhomebar') %>
    <article class="mb-5 greybkgd p-3 rounded-2">
      <h1 class="title text-uppercase text-md-center text-lg-start"><%- anime.title_english || anime.title %></h1>
      <div class="row">
        <div class="col-4 col-lg-4">
          <img class="img-fluid" src="<%- anime.images.jpg.large_image_url%>" />
        </div>
        <div class="col-8 col-lg-5">
          <p class="px-0 px-lg-2 text-start"><%- anime.synopsis %></p>
        </div>
        <div class="col-12 col-lg-3 mt-3">
          <div class="row row-cols-3 row-cols-lg-1">
            <div class="col-4 col-lg-12">
              <ul class="mb-lg-5 list-group flex-lg-column flex-row">
                <% anime.genres.forEach((genre, index) => { %>
                <li class="list-group-item"><span class="badge bg-light text-dark"><%- genre.name %></span></li>
                <% }); %>
              </ul>
            </div>
            <div class="col-4 col-lg-12">
              <ul class="mt-lg-3 list-group flex-lg-column flex-row">
                <% anime.themes.forEach((theme, index) => { %>
                <li class="list-group-item"><span class="badge bg-dark"><%- theme.name %></span></li>
                <% }); %>
              </ul>
            </div>
            <div class="col-4 col-lg-12">
              <ul class="mt-lg-3 pl-0 animeul">
                <li><b>Animation Studio(s)</b><br />
                  <% anime.studios.forEach((studio) => {  %> <%- studio.name %> <% }); %> </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </article>

    <%- include('genres&footer') %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>